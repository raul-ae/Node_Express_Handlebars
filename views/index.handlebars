<div class="row">
  <div class="col-4">
    <h3>Order a burger: </h3>
  </div>
  <div class="col">
    <form class="create-form">

        <div class="form-group">
          <label for="ca"><h5>Burger Name:</h5></label>
          <input type="text" id="ca" name="name">
          <button type="submit">Order Burger</button>
        </div>
 
      </form>
  </div>
</div>

<div class="row">
  <div class="col">
      <h2>Burgers ordered!</h2>

      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
            
          {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class="col">
    <h2>Burgers eaten!</h2>

    <ul>
      {{#each burgers}}
        {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
          
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>